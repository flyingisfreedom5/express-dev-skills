<%- include('../partials/header') %>

<h3>Skills as of <%= time.toLocaleString() %></h3>
<ul>
  <% skills.forEach(function(s) { %>
    <li>
      <!-- query parameters come after a "?" in the url
           They are a way to provide extra info to the server
           Similar to route params, except they do not influence
           how a route is matched
      -->
      <form action="/skills/<%= s.id %>?_method=DELETE"
        class="delete-form"
        method="POST"
      >
        <button type="submit">X</button>
      </form>
      <a href="/skills/<%= s.id %>"><%= s.skill %></a>
      - 
      <%= s.done ? 'done' : 'not done' %>
    </li>
  <% }); %>
</ul>
<a href="/skills/new">Add Skills</a>

<%- include('../partials/footer') %>